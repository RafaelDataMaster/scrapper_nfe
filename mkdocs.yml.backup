site_name: Extrator PAF (Email) # Atualize o nome visual do site
site_url: https://rafaeldatamaster.github.io/scrapper_email_paf/ # A NOVA URL final
repo_url: https://github.com/rafaeldatamaster/scrapper_email_paf # O NOVO link do repo
repo_name: Scrapper Email PAF # O nome que aparece no canto direito

# Configuração do Tema Sóbrio (Material Design)
theme:
    name: material
    language: pt-BR
    features:
        - navigation.tabs # Abas no topo (estilo moderno)
        - navigation.sections # Seções expansíveis no menu
        - toc.integrate # Índice integrado na lateral esquerda (limpo)
        - content.code.copy # Botão de copiar nos blocos de código
    palette:
        # Esquema Claro (Profissional/Corporativo)
        - scheme: default
          primary: white # Barra superior branca (muito elegante)
          accent: indigo # Detalhes sutis em azul índigo
          toggle:
              icon: material/brightness-7
              name: Mudar para modo escuro

        # Esquema Escuro (Opcional - bom deixar disponível)
        - scheme: slate
          primary: black
          accent: indigo
          toggle:
              icon: material/brightness-4
              name: Mudar para modo claro

# Plugins para funcionalidades extras
plugins:
    - search # Barra de busca
    - mkdocstrings:
          handlers:
              python:
                  paths: [.]
    - panzoom:
          full_screen: true # Opcional: permite abrir em tela cheia
          initial_zoom_level: 1.0
    - encryptcontent: # Proteção de conteúdo sensível
          global_password: "M4sterKey@0912" # Senha para descriptografar o conteúdo
          title_prefix: "(Bloqueado) "
          search_index: "dynamically"
markdown_extensions:
    - attr_list # Permite classes em elementos HTML/Markdown
    - md_in_html # Permite Markdown dentro de tags HTML <div>
    - admonition # Caixas de alerta (!!! warning)
    - pymdownx.details # Colapsar alertas
    - pymdownx.superfences: # Blocos de código avançados (Mermaid)
          custom_fences:
              - name: mermaid
                class: mermaid
                format: !!python/name:pymdownx.superfences.fence_code_format
    - pymdownx.emoji: # Ícones :material-icon:
          emoji_index: !!python/name:material.extensions.emoji.twemoji
          emoji_generator: !!python/name:material.extensions.emoji.to_svg

